<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.ddinitiativetracker.CreatureViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="8dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        android:layout_margin="10dp"
        >

        <!--A ConstraintView would probably be better than LL here-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--ImageView's layout width is only 50 to compact the image-->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:scaleType="fitStart"
                android:src="@drawable/ic_launcher_foreground"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/creature_initText"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@{viewModel.init}"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/creature_nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.name}"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/creature_acText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.AC}"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
